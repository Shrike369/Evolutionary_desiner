<!-- ================= SHAFTS AND TIRES ASSEMBLY ================= -->

<!-- Left front shaft (front left corner) -->
<joint name="base_link_to_left_front_shaft" type="fixed">
	<parent link="base_link"/>
	<child link="left_front_shaft"/>
	<origin xyz="-0.18 0.2 -0.05" rpy="0 0 0"/>
</joint>

<!-- Attach left front tire to shaft with continuous joint (rotates freely) -->
<joint name="left_front_shaft_to_tire" type="continuous">
	<parent link="left_front_shaft"/>
	<child link="left_front_tire"/>
	<!-- Tire is placed at end of shaft, so no offset needed -->
	<origin xyz="0 0 0" rpy="0 0 0"/>
	<axis xyz="0 1 0"/>
</joint>

<!-- Left rear shaft (rear left corner) -->
<joint name="base_link_to_left_rear_shaft" type="fixed">
	<parent link="base_link"/>
	<child link="left_rear_shaft"/>
	<origin xyz="0.18 0.2 -0.05" rpy="0 0 0"/>
</joint>

<!-- Attach left rear tire to shaft with continuous joint -->
<joint name="left_rear_shaft_to_tire" type="continuous">
	<parent link="left_rear_shaft"/>
	<child link="left_rear_tire"/>
	<origin xyz="0 0 0" rpy="0 0 0"/>
	<axis xyz="0 1 0"/>
</joint>

<!-- Right front shaft (front right corner) -->
<joint name="base_link_to_right_front_shaft" type="fixed">
	<parent link="base_link"/>
	<child link="right_front_shaft"/>
	<origin xyz="-0.18 -0.2 -0.05" rpy="0 0 0"/>
</joint>

<!-- Attach right front tire to shaft with continuous joint -->
<joint name="right_front_shaft_to_tire" type="continuous">
	<parent link="right_front_shaft"/>
	<child link="right_front_tire"/>
	<origin xyz="0 0 0" rpy="0 0 0"/>
	<axis xyz="0 1 0"/>
</joint>

<!-- Right rear shaft (rear right corner) -->
<joint name="base_link_to_right_rear_shaft" type="fixed">
	<parent link="base_link"/>
	<child link="right_rear_shaft"/>
	<origin xyz="0.18 -0.2 -0.05" rpy="0 0 0"/>
</joint>

<!-- Attach right rear tire to shaft with continuous joint -->
<joint name="right_rear_shaft_to_tire" type="continuous">
	<parent link="right_rear_shaft"/>
	<child link="right_rear_tire"/>
	<origin xyz="0 0 0" rpy="0 0 0"/>
	<axis xyz="0 1 0"/>
</joint>

</robot>
